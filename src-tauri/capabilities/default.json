{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "**" }
      ]
    },
    "dialog:allow-open",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:allow-stat",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-mkdir",
    "fs:allow-copy-file",
    "fs:allow-app-read",
    "fs:allow-app-write",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    {
      "identifier": "fs:scope-home",
      "allow": [
        { "path": "$HOME/**" }
      ]
    },
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "shell:allow-execute",
    "shell:allow-spawn",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "rsync",
          "cmd": "rsync",
          "args": true,
          "sidecar": false
        },
        {
          "name": "git",
          "cmd": "git",
          "args": true,
          "sidecar": false
        },
        {
          "name": "robocopy",
          "cmd": "robocopy",
          "args": true,
          "sidecar": false
        }
      ]
    },
    "os:default"
  ]
}
